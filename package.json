{
  "name": "square-market",
  "description": "A marketplace app with federation",
  "scripts": {
    "setup": "npm i -ws",
    "test:frontend": "npm run test -w apps/frontend",
    "test:accounts": "npm run test -w apps/accounts",
    "dev:accounts": "npm run dev -w apps/accounts",
    "dev:ads": "npm run dev -w apps/advertisements",
    "dev:gateway": "npm run dev -w apps/gateway",
    "build:frontend": "npm run build -w apps/frontend",
    "build:accounts": "npm run build -w apps/accounts",
    "build:gateway": "npm run build -w apps/gateway"
  },
  "workspaces": [
    "./apps/*"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.0",
    "lerna": "^7.4.1"
  },
  "volta": {
    "node": "20.9.0",
    "npm": "10.2.3"
  }
}
